<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/test"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/view_one"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#d2d2d2"
        android:gravity="center"
        android:text="最简单的viewpager!" />

    <TextView
        android:id="@+id/view_two"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#d5f4f4"
        android:gravity="center"
        android:text="带标题的viewpager!" />

    <TextView
        android:id="@+id/view_three"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#a22222"
        android:gravity="center"
        android:text="自定义标题的viewpager!" />

    <TextView
        android:id="@+id/view_four"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#c2c222"
        android:gravity="center"
        android:text="使用fragment的viewpager!" />

    <TextView
        android:id="@+id/view_five"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#f2f2f2"
        android:gravity="center"
        android:text="插入图片的viewpager!" />

    <TextView
        android:id="@+id/view_six"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#d2d2"
        android:gravity="center"
        android:text="底部带小圆点的viewpager!" />

</LinearLayout>